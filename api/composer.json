{
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": ">=7.1.0",
    "ext-json": "^1.5",
    "ramsey/uuid": "^3.8",
    "slim/slim": "^3.12",
    "symfony/dotenv": "^4.2",
    "zendframework/zend-diactoros": "^2.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5",
    "roave/security-advisories": "dev-master"
  },
  "autoload" : {
    "psr-4": {
      "Api\\": "src"
    }
  },
  "autoload-dev" : {
    "psr-4": {
      "Api\\Test\\": "tests/"
    }
  },
  "scripts" : {
    "test": "phpunit --colors=always"
  }
}
